@using SmartBuy.Models

@model Produto

@{
    ViewData["Title"] = $"Excluir Produto";
}

<h1>@ViewData["Title"]</h1>
<h3>Tem certeza que deseja excluir o produto @Model.Nome?</h3>
<hr/>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estoque)
        </dd>
        
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdProduto"/>
    <input type="submit" value="Excluir" class="btn btn-danger"/>
    <a class="btn btn-warning" asp-action="Index">Voltar</a>
</form>
