@using SmartBuy.Core.Entities;
@model Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center">
                <img src="@Url.Action("Imagem", "Produtos", new { id = Model.IdProduto })"
                     class="img-fluid rounded-start p-3"
                     style="max-height: 300px; object-fit: contain;" />

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h4 class="card-title">@Model.Nome</h4>
                    <p class="card-text"><strong>Descrição:</strong> @Model.Descricao</p>
                    <p class="card-text"><strong>Preço:</strong> R$ @Model.Preco.ToString("F2")</p>
                    <p class="card-text"><strong>Estoque:</strong> @Model.Estoque</p>
                    <p class="card-text"><strong>Categoria:</strong> @Model.Categoria?.Nome</p>

                    <div class="mt-4">
                        <a class="btn btn-warning me-2" asp-action="Edit" asp-route-id="@Model.IdProduto">Editar</a>
                        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
