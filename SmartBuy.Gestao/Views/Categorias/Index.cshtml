@using SmartBuy.Models;

@model IEnumerable<Categoria>


@{
    ViewData["Title"] = "Lista de Categorias";
}

<h1 class="display-5 mb-4 text-center">@ViewData["Title"]</h1>
<hr />

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="fa fa-plus me-2"></i> Novo Produto
    </a>
</div>

<div class="table-responsive-sm">
    <table class="table table-hover align-middle shadow-sm">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.IdCategoria)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCategoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td class="col-3">
                            <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.IdCategoria"><spam class="fa fa-search"></spam></a>
                            <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdCategoria"><spam class="fa fa-pencil-alt"></spam></a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdCategoria"><spam class="fa fa-trash"></spam></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>