@using SmartBuy.Models

@model Categoria

@{
    ViewData["Title"] = $"Excluir Categoria";
}

<h1>@ViewData["Title"]</h1>
<h3>Tem certeza que deseja excluir a categoria @Model.Nome?</h3>
<hr/>

@if (TempData["Alerta"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Categoria utilizada em produtos.</strong> Não será possivel a exclusão.
</div>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdCategoria"/>
    <input type="submit" value="Excluir" class="btn btn-danger"/>
    <a class="btn btn-warning" asp-action="Index">Voltar</a>
</form>

@section Scripts{
    @{
    }
}