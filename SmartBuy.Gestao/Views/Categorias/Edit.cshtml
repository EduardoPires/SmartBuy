@using SmartBuy.Models;

@model Categoria

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <h4 class="display-6">Categorias aaaaaa</h4>

        <input type="hidden" asp-for="IdCategoria" />

        <div class="form-group col-md-6">
            <label class="col-form-label">Nome</label>
            <input class="form-control" asp-for="Nome" />
            <span asp-validation-for="Nome" class="alert-danger" />
        </div>
        <div class="form-group col-md-6">
            <label class="col-form-label">Descrição</label>
            <input class="form-control" asp-for="Descricao" />
            <span asp-validation-for="Descricao" class="alert-danger" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 mt-3">
            <button type="submit" value="Enviar" class="btn btn-primary">Enviar</button>
            <a asp-action="Index" class="btn btn-warning">Voltar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}