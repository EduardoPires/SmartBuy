@using SmartBuy.Models
@model IEnumerable<Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<h1 class="display-5 mb-4 text-center">@ViewData["Title"]</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="fa fa-plus me-2"></i> Novo Produto
    </a>
</div>

<div class="table-responsive-sm">
    <table class="table table-hover align-middle shadow-sm">
        <thead class="table">
            <tr>
                <th>Imagem</th>
                <th>Código</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Estoque</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Imagem" alt="@item.Nome" class="img-fluid rounded" style="width: 100px; height: auto;" />
                    </td>
                    <td>@item.IdProduto</td>
                    <td>@item.Nome</td>
                    <td>@item.Descricao</td>
                    <td>R$ @item.Preco.ToString("N2")</td>
                    <td>@item.Estoque</td>
                    <td class="col-3">
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.IdProduto"><spam class="fa fa-search"></spam></a>
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdProduto"><spam class="fa fa-pencil-alt"></spam></a>
                        <a asp-controller="Produtos" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProduto"><spam class="fa fa-trash"></spam></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
